{
    "name": "CS2 Stats Python",
    "image": "python:3.11-slim",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "dev.containers.dockerCredentialHelper": false,
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },

    "postCreateCommand": "pip install pandas numpy matplotlib seaborn plotly jupyter openpyxl scipy scikit-learn",
    
    "remoteUser": "root"
}