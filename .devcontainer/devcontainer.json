{
    "name": "CS2 Stats Python",
    "image": "python:3.11-slim",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "dev.containers.dockerCredentialHelper": false,
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "[python]": {
                    "editor.formatOnSave": true
                }
            }
        }
    },
    "remoteUser": "root"
}